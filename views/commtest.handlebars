<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Testing Page!</h2>

        <h3>Comms:</h3>
          <ul id="comm-list" class="list-group">
            {{#each comms}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="comm/{{this.id}}">{{this.name}}</a>
              <button class="btn btn-danger float-right delete">ï½˜</button>
            </li>
            {{/each}}
          </ul>

        <form class="new-comm" action="POST">
          <div class="form-group">
            <label for="comm-name">user-name</label>
            <input type="text" id="comm-name" class="form-control" aria-describedby="comm-name" placeholder="comm-name">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/comms.js"></script>
