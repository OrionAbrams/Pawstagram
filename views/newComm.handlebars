<div class="container">
  <div class="main main-raised top-margin bottom-margin">
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <div class="row">
          <h2 class="text-center">Please Fill Out Community Information</h2>
          
          <form class="new-comm" style="width: 100%;" action="POST">
            <div class="form-group">
              <label for="comm-name" class="bmd-label-floating">Community Name:</label>
              <input type="text" id="comm-name" class="form-control" aria-describedby="comm-name" placeholder="">
            </div>
            <div class="form-group">
              <label for="comm-info" class="bmd-label-floating">Community Info:</label>
              <input type="text" id="comm-info" class="form-control" aria-describedby="comm-info" placeholder="">
            </div>
            <div class="form-group">
              <label for="comm-location" class="bmd-label-floating">Community Location:</label>
              <input type="text" id="comm-location" class="form-control" aria-describedby="comm-location" placeholder="">
            </div>
            <div class="form-group">
              <label for="comm-photo" class="bmd-label-floating">Community Photo URL:</label>
              <input type="text" id="comm-photo" class="form-control" aria-describedby="comm-photo" placeholder="">
            </div>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </form>
          <a href="/user"><button id="cancel" href="/user" style="margin-top: -65px;" class="btn btn-dark float-left">Cancel</button></a>

        </div>
      </div>

      <div class="col-lg-12 text-center">
        <h3>Existing Communities:</h3>
        <div class="row">
          <div class="mx-auto mb-3" id="communities-container">
            <ul class="nav nav-pills nav-pills-icons justify-content-center" role="tablist">
              {{#each comms}}
                {{> userCommunities/userCommunity-block}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/comms.js"></script>